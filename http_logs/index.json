{
  "settings": {
    "index.number_of_shards": 5,
    "index.number_of_replicas": {{number_of_replicas | default(0)}}
  },
  "mappings": {
    "type": {
      "dynamic": "strict",
      "_all": {
        "enabled": false
      },
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "properties": {
        "@timestamp": {
          "type": "date",
          "numeric_resolution": "seconds"
        },
        "clientip": {
          "type": "ip"
        },
        "request": {
          "type": "string",
          "fields": {
            "raw": {
              "ignore_above": 256,
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "status": {
          "type": "integer"
        },
        "size": {
          "type": "integer"
        }
      }
    }
  }
}