{
    "template": {
      "settings": {
        "index": {
          {% if index_sorting == "hostname" %}
            "sort.field": [ "host.name", "@timestamp" ],
            "sort.order": [ "asc", "desc" ]
          {%- elif index_sorting == "timestamp" %}
            "sort.field": [ "@timestamp", "host.name" ],
            "sort.order": [ "desc", "asc" ]
          {%- endif %}
        }
      },
      "mappings": {
        {% if index_sorting %}
            "_source": {
                "mode": "synthetic"
            }
        {%- endif %}
      }
    }
  }