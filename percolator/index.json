{
  "settings": {
    "index.number_of_shards": 5
  },
  "mappings": {
    "content": {
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "dynamic": "strict",
      "properties": {
        "body": {
          "type": "text",
          "analyzer": "english"
        },
        "query": {
          "type": "percolator"
        }
      }
    }
  }
}