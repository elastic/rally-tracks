{% import "rally.helpers" as rally with context %}

{
  "version": 2,
  "description": "metricbeat information for elastic-app k8s cluster",
  "composable-templates": [
    {
      "name": "tsdb-template",
      "index-pattern": "k8s*",
      "delete-matching-indices": true,
      "template": "index-template.json"
    }
  ],
  "data-streams": [
    {
      "name": "k8s"
    }
  ],
  "corpora": [
    {
      "name": "tsdb",
      "base-url": "https://storage.cloud.google.com/cloudnative-rally/",
      "documents": [
        {
          "source-file": "documents-1k.json.bz2",
          "document-count": 4000,
          "uncompressed-bytes": 41059107
        }
      ]
    }
  ],
  "operations": [
    {{ rally.collect(parts="operations/*.json") }}
  ],
  "challenges": [
    {{ rally.collect(parts="challenges/*.json") }}
  ]
}
