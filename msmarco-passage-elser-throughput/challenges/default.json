{
  "name": "msmarco-passage-elser-throughput",
  "description": "Test the throughput of ELSER in various scenarios",
  "default": true,
  "schedule": [
    {
      "operation": "delete-index"
    },
    {
      "operation": {
        "include-in-reporting": false,
        "operation-type": "create-index"
      }
    },
    {
      "name": "create elser model and deployment",
      "operation": {
        "number_of_allocations": {{ number_of_allocations|default(1) }},
        "threads_per_allocation": {{ threads_per_allocation|default(2) }},
        "queue_capacity": {{ queue_capacity|default(1024) }},
        "operation-type": "create-elser-model",
        "include-in-reporting": false
      }
    },
    {
      "name": "setup-elser-pipeline",
      "operation": {
        "operation-type": "put-pipeline",
        "id": "elser2",
        "body": {
          "description": "Pipes documents to ELSER",
          "processors": [
            {
              "inference": {
                "model_id": ".elser_model_1",
                "target_field": "ml",
                "field_map": {
                  "body": "text_field"
                },
                "inference_config": {
                  "text_expansion": {
                    "results_field": "tokens"
                  }
                }
              }
            }
          ],
          "on_failure": [
            {
              "set": {
                "field": "_index",
                 {% raw %}
                "description": "Record error information",
                "field": "error_information",
                "value": "Processor {{ _ingest.on_failure_processor_type }} with tag {{ _ingest.on_failure_processor_tag }} in pipeline {{ _ingest.on_failure_pipeline }} failed with message {{ _ingest.on_failure_message }}"
                {% endraw %}
              }
            }
          ]
        }
      }
    },
    {
      "name": "check-cluster-health",
      "operation": {
        "include-in-reporting": false,
        "operation-type": "cluster-health",
        "index": "msmarco-passage-collection-elser-throughput",
        "request-params": {
          "wait_for_status": "{{cluster_health | default('yellow')}}",
          "wait_for_no_relocating_shards": "true"
        },
        "retry-until-success": true
      }
    },
    {
      "operation": {        
        "include-in-reporting": true,
        "operation-type": "bulk",
        "bulk-size": {{bulk_size | default(100)}},
        "pipeline": "elser2",
        "ingest-percentage": {{ingest_percentage | default(10)}}
      },
      "clients": {{bulk_indexing_clients | default(1)}}
    },
    {
      "operation": {
        "include-in-reporting": false,
        "operation-type": "force-merge",
        "request-timeout": 7200
      }
    },
    {
      "name": "wait-until-merges-finish",
      "operation": {
        "include-in-reporting": false,
        "operation-type": "index-stats",
        "index": "_all",
        "condition": {
          "path": "_all.total.merges.current",
          "expected-value": 0
        },
        "retry-until-success": true,
        "include-in-reporting": false
      }
    }
  ]
}