{
  "settings": {
    "index": {
      {# non-serverless-index-settings-marker-start #}{%- if build_flavor != "serverless" or serverless_operator == true -%}
      {%- if index_refresh_interval is defined %}
      "refresh_interval": {{ index_refresh_interval | tojson }},
      {%- endif %}
      {% if preload_pagecache %}
      "store.preload": [ "vec", "vex", "vem"],
      {% endif %}
      "number_of_shards": {{number_of_shards | default(1)}},
      "number_of_replicas": {{number_of_replicas | default(0)}},
      "merge.scheduler.auto_throttle": {{ index_merge_scheduler_auto_throttle | default(false) | tojson }}
      {% if aggressive_merge_policy %},
      "merge": {
        "policy": {
          "max_merged_segment": "25gb",
          "floor_segment": "1gb",
          "segments_per_tier": 5
        }
      }
      {% endif %}
      {# non-serverless-index-settings-marker-end #}
      {% endif %}
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "docid": {
        "type": "keyword"
      },
      "emb": {
        "type": "dense_vector",
        "element_type": {{ vector_index_element_type | default("float") | tojson }},
        "dims": 1024,
        "index": true,
        "similarity": "dot_product",
        "index_options": {
          "type": {{ vector_index_type | default("bbq_hnsw") | tojson }}
        }
      }
    }
  }
}
