{
  "name": "index-and-search",
  "description": "Index the document corpus and search",
  "default": true,
  "schedule": [
    {{ rally.collect(parts="../common/schedule_setup.json") }},
    {
      "operation": "index",
      "warmup-time-period": 240,
      "clients": {{bulk_indexing_clients | default(8)}}
      {{ rally.exists_set_param("target-throughput", pre_bulk_indexing_target_throughput) }}
    },
    {
      "name": "refresh-after-index",
      "operation": "refresh"
    },
    {
      "operation": "default",
      "warmup-iterations": 50,
      "iterations": 100,
      "target-throughput": 3
    },
    {
      "operation": "default_1k",
      "warmup-iterations": 50,
      "iterations": 100,
      "target-throughput": 3
    }
  ]
}
