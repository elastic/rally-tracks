{
  "settings": {
    "index.number_of_shards": 5
  },
  "mappings": {
    "articles": {
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "dynamic": "strict",
      "properties": {
        "name": {
          "type": "keyword"
        },
        "journal": {
          "type": "text"
        },
        "date": {
          "type": "text"
        },
        "volume": {
          "type": "text"
        },
        "issue": {
          "type": "text"
        },
        "accession": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "pmid": {
          "type": "integer"
        },
        "body": {
          "type": "text"
        }
      }
    }
  }
}