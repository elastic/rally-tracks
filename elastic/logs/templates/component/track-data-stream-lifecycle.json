{
  "template": {
{% if lifecycle == "ilm" or (not lifecycle and build_flavor == "default") %}
    "settings": {
      "index": {
        "lifecycle": {
          "name": "logs"
        }
      }
    }
{%- elif (lifecycle == "dlm" or (not lifecycle and build_flavor == "serverless")) and dlm_retention %}
    "lifecycle": {
      "data_retention": "{{ dlm_retention }}"
    }
{%- endif -%}
  }
}
