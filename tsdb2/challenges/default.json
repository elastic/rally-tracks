    {
      "name": "append-no-conflicts",
      "description": "Indexes the whole document corpus.",
      "default": true,
      "schedule": [
        {
          "name": "create-all-templates",
          "operation": {
            "operation-type": "create-composable-template",
            "request-params": {
              "create": "true"
            }
          }
        },
        {
          "name": "put-timestamp-pipeline",
          "operation": {
            "operation-type": "put-pipeline",
            "id": "timestamp_pipeline",
            "body": {
              "processors": [
                  {
                      "set": {
                          "field": "@timestamp",
                          "value": {{'"{{_ingest.timestamp}}"'}}
                      }
                  }
              ]
            }
          }
        },
        {
          "name": "check-cluster-health",
          "operation": {
            "operation-type": "cluster-health",
            "request-params": {
              "wait_for_status": "{{cluster_health | default('green')}}",
              "wait_for_no_relocating_shards": "true"
            },
            "retry-until-success": true
          }
        },
        {
          "operation": "index-container",
          "warmup-time-period": 240,
          "clients": {{bulk_indexing_clients | default(8)}}
        },
        {
          "operation": "index-node",
          "warmup-time-period": 240,
          "clients": {{bulk_indexing_clients | default(8)}}
        },
        {
          "operation": "index-pod",
          "warmup-time-period": 240,
          "clients": {{bulk_indexing_clients | default(8)}}
        },
        {
          "name": "refresh-after-index",
          "operation": "refresh"
        },
        {
          "operation": {
            "operation-type": "force-merge",
            "request-timeout": 7200{%- if force_merge_max_num_segments is defined %},
            "max-num-segments": {{ force_merge_max_num_segments | tojson }}
            {%- endif %}
          }
        },
        {
          "name": "wait-until-merges-finish",
          "operation": {
            "operation-type": "index-stats",
            "index": "_all",
            "condition": {
              "path": "_all.total.merges.current",
              "expected-value": 0
            },
            "retry-until-success": true,
            "include-in-reporting": false
          }
        },
        {
          "name": "refresh-after-force-merge",
          "operation": "refresh"
        },
        {
          "parallel": {
            "completed-by": "average_container_cpu_1day",
            "tasks": [
              {
                "name": "touch-container-index-1",
                "operation": "touch-container-index",
                "iterations": 20000
              },
              {
                "operation": "average_container_cpu_1day",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "average_container_memory_usage_1d",
            "tasks": [
              {
                "name": "touch-container-index-2",
                "operation": "touch-container-index",
                "iterations": 20000
              },
              {
                "operation": "average_container_memory_usage_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "cpu_usage_per_container_1d",
            "tasks": [
              {
                "name": "touch-container-index-4",
                "operation": "touch-container-index",
                "iterations": 20000
              },
              {
                "operation": "cpu_usage_per_container_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "memory_usage_per_container_1d",
            "tasks": [
              {
                "name": "touch-container-index-5",
                "operation": "touch-container-index",
                "iterations": 20000
              },
              {
                "operation": "memory_usage_per_container_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "cpu_usage_per_pod_1d",
            "tasks": [
              {
                "name": "touch-container-pod-1",
                "operation": "touch-pod-index",
                "iterations": 20000
              },
              {
                "operation": "cpu_usage_per_pod_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "memory_usage_per_pod_1d",
            "tasks": [
              {
                "name": "touch-container-pod-2",
                "operation": "touch-pod-index",
                "iterations": 20000
              },
              {
                "operation": "memory_usage_per_pod_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "parallel": {
            "completed-by": "unique_deployment_count_1d",
            "tasks": [
              {
                "name": "touch-container-index-6",
                "operation": "touch-container-index",
                "iterations": 20000
              },
              {
                "name": "touch-container-pod-3",
                "operation": "touch-pod-index",
                "iterations": 20000
              },
              {
                "operation": "unique_deployment_count_1d",
                "warmup-iterations": 50,
                "iterations": 200
              }
            ]
          }
        },
        {
          "operation": "updated_average_container_cpu_1day",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_average_container_memory_usage_1d",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_cpu_usage_per_container_1d",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_cpu_usage_per_pod_1d",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_memory_usage_per_container_1d",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_memory_usage_per_pod_1d",
          "warmup-iterations": 0,
          "iterations": 100
        },
        {
          "operation": "updated_unique_deployment_count_1d",
          "warmup-iterations": 0,
          "iterations": 100
        }
      ]
    }
