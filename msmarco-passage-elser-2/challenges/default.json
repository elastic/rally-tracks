{
  "name": "msmarco-passage-elser-wand",
  "description": "Uses tokens and weights generated by the ELSER model",
  "default": true,
  "schedule": [
    {
      "operation": "delete-index"
    },
    {
      "operation": {
        "include-in-reporting": false,
        "operation-type": "create-index"
      }
    },
    {
      "name": "check-cluster-health",
      "operation": {
        "include-in-reporting": false,
        "operation-type": "cluster-health",
        "index": "msmarco-passage-collection-elser",
        "request-params": {
          "wait_for_status": "{{cluster_health | default('yellow')}}",
          "wait_for_no_relocating_shards": "true"
        },
        "retry-until-success": true
      }
    },
    {
      "operation": {        
        "include-in-reporting": false,
        "operation-type": "bulk",
        "bulk-size": {{bulk_size | default(5000)}},
        "ingest-percentage": {{ingest_percentage | default(100)}}
      },
      "clients": {{bulk_indexing_clients | default(8)}}
    },
    {
      "operation": {
        "include-in-reporting": false,
        "operation-type": "force-merge",
        "request-timeout": 7200
      }
    },
    {
      "name": "wait-until-merges-finish",
      "operation": {
        "include-in-reporting": false,
        "operation-type": "index-stats",
        "index": "_all",
        "condition": {
          "path": "_all.total.merges.current",
          "expected-value": 0
        },
        "retry-until-success": true,
        "include-in-reporting": false
      }
    },
    {
      "operation": "10-weighted-terms-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1      
    },
    {
      "operation": "10-weighted-terms-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },
    {
      "operation": "10-words-bm25-passage-search-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },    
    {
      "operation": "10-words-bm25-passage-search-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    }, 
    {
      "operation": "20-weighted-terms-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1      
    },
    {
      "operation": "20-weighted-terms-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },
    {
      "operation": "20-words-bm25-passage-search-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },    
    {
      "operation": "20-words-bm25-passage-search-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },       
    {
      "operation": "30-weighted-terms-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1      
    },
    {
      "operation": "30-weighted-terms-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },
    {
      "operation": "30-words-bm25-passage-search-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },      
    {
      "operation": "30-words-bm25-passage-search-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },     
    {
      "operation": "40-weighted-terms-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1      
    },
    {
      "operation": "40-weighted-terms-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },
    {
      "operation": "40-words-bm25-passage-search-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    },
    {
      "operation": "40-words-bm25-passage-search-maxwand-disabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1
    }, 
    {
      "operation": "50-weighted-terms-maxwand-enabled",
      "warmup-iterations": 100,
      "iterations": 100,
      "clients": 1      
    },
    {
      "operation": "50-weighted-terms-maxwand-disabled",
      "warmup-iterations": 100,
