{
  "template" : {
    "settings": {
      "index" : {
        "number_of_replicas" : "{{number_of_replicas | default('1')}}",
        "number_of_shards" : "{{number_of_shards | default('1')}}"
      }
    },
    "mappings" : {
      "runtime": {
        "rally.doc_size": {
          "type": "long"
        },
        "rally.message_size": {
          "type": "long"
        }
      },
      "properties" : {
        "event": {
          "properties": {
            "created": {
              "type": "date",
              "format": "strict_date_optional_time"
            },
            "ingested": {
              "type": "date",
              "format": "strict_date_optional_time"
            }
          }
        }
      }
    }
  },
  "version" : 0,
  "_meta" : {
    "managed" : false,
    "description" : "mappings for the custom track template installed by Rally"
  }
}
