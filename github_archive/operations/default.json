{
  "name": "filter_query",
  "operation-type": "search",
  "body": {
    "size": 100,
    "query": {
      "bool": {
        "filter": [
          {
            "bool": {
              "must": [
                {
                  "range": {
                    "created_at": {
                      "lte": {{p_query_end_timestamp | tojson}},
                      "gte": {{p_query_start_timestamp | tojson}}
                    }
                  }
                },
                {
                  "bool": {
                    "should": [
                      {
                        "match": {
                          "public": true
                        }
                      },
                      {
                        "bool": {
                          "must_not": [
                            {
                              "terms": {
                                "type": [
                                  "IssueCommentEvent"
                                ]
                              }
                            }
                          ]
                        }
                      },
                      {
                        "bool": {
                          "should": [
                            {
                              "match": {
                                "payload.action": "opened"
                              }
                            },
                            {
                              "exists": {
                                "field": "org.url"
                              }
                            },
                            {
                              "exists": {
                                "field": "payload.pull_request"
                              }
                            }
                          ]
                        }
                      }
                    ]
                  }
                }
              ],
              "must_not": [
                {
                  "match": {
                    "has_issues": false
                  }
                },
                {
                  "bool": {
                    "must": [
                      {
                        "match": {
                          "repo.visibility": "public"
                        }
                      },
                      {
                        "bool": {
                          "should": [
                            {
                              "match": {
                                "pull_request.state": "open"
                              }
                            },
                            {
                              "bool": {
                                "must_not": [
                                  {
                                    "exists": {
                                      "field": "pull_request.merged_at"
                                    }
                                  }
                                ]
                              }
                            }
                          ],
                          "minimum_should_match": 1
                        }
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
},
