          "tags": ["lookup", "join"],
          "clients":  {{query_clients | default(1)}},
          "warmup-iterations": 5,
          "iterations": 20
        },

        {
          "operation": "esql_lookup_join_1k_100k_200k_500k",
          "tags": ["lookup", "join", "limit1000"],
          "clients":  {{query_clients | default(1)}},
          "warmup-iterations": 10,
          "iterations": 50
        },
        {
          "operation": "esql_lookup_join_limit10_expanding10000_filter1",
          "tags": ["lookup", "join"],
          "clients":  {{query_clients | default(1)}},
          "warmup-iterations": 5,
          "iterations": 20
        },
        {
          "operation": "esql_lookup_join_expanding10000_filter10",
          "tags": ["lookup", "join"],
          "clients":  {{query_clients | default(1)}},
          "warmup-iterations": 5,
