{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(2)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}}
  },
  "mappings": {
    "_source": {
      "mode": {{ source_mode | default("stored") | tojson }}
    },
    "properties": {
      "userId": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "questionId": {
        "type": "keyword"
      },
      "creationDate": {
        "type": "date"
      },
      "title": {
        "type": "text"
        {% if source_mode == "synthetic" %},"store": true{% endif %}
      },
      "titleVector": {
        "type": "dense_vector",
        "dims" : 768,
        "index" : true,
        "similarity": "dot_product"
      },
      "acceptedAnswerId": {
        "type": "keyword"
      },
      "body": {
        "type": "text"
        {% if source_mode == "synthetic" %},"store": true{% endif %}
      }
    }
  }
}
