{
  "template": {
{% if lifecycle == "ilm" or (not lifecycle and build_flavor == "default") %}
    "settings": {
      "index": {
        "lifecycle": {
          "name": "logs"
        }
      }
    }
{%- elif lifecycle == "dlm" or (not lifecycle and build_flavor == "serverless") %}
    "lifecycle": {
{%- if dlm_retention %}
      "data_retention": "{{ dlm_retention }}"
{%- endif %}
    }
{%- endif -%}
  }
}
