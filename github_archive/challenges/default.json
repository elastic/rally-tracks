{
  "name": "append-no-conflicts",
  "description": "Index the document corpus and search",
  "default": true,
  "schedule": [
    {%- if p_data_stream %}
    {{ rally.collect(parts="../schedules/setup_data_stream.json") }}
    {%- else %}
    {{ rally.collect(parts="../schedules/setup_standard_index.json") }}
    {% endif -%},
    {
      "operation": "index",
      "warmup-time-period": 240,
      "clients": {{bulk_indexing_clients | default(8)}}
    },
    {
      "name": "refresh-after-index",
      "operation": "refresh"
    },
    {
      "operation": "default",
      "warmup-iterations": 50,
      "iterations": 100,
      "target-throughput": 3
    },
    {
      "operation": "default_1k",
      "warmup-iterations": 50,
      "iterations": 100,
      "target-throughput": 3
    }
  ]
}
