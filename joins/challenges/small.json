          "warmup-iterations": 5,
          "iterations": 20
        },
        {
          "operation": "esql_lookup_join_expanding10000_filter1000",
          "tags": ["lookup", "join"],
          "clients":  {{query_clients | default(1)}},
          "warmup-iterations": 5,
          "iterations": 20
        },
        {
          "operation": "esql_lookup_join_expanding10000_filter5000",
