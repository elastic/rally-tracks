
{% import "rally.helpers" as rally %}
{
  "name": "logging-reindex-data-stream",
  "description": "Reindex data streams",
  "parameters": {
    "generate-data": false
  },
  "schedule": [
    {
      "name": "start-data-stream-reindex-{{ p_reindex_data_stream }}",
      "operation": {
        "operation-type": "start-reindex-data-stream",
        "data-stream":  {{ p_reindex_data_stream | tojson }}
      }
    },
    {
      "name": "wait-for-reindex-data-stream-{{ p_reindex_data_stream }}",
      "operation": {
        "operation-type": "wait-for-reindex-data-stream",
        "data-stream":  {{ p_reindex_data_stream | tojson }}
      }
    }
  ]
}
